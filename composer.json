{
  "name": "cline/discovery",
  "description": "",
  "license": "MIT",
  "authors": [
    {
      "name": "Brian Faust",
      "email": "brian@cline.sh"
    }
  ],
  "require": {
    "php": "^8.5.0",
    "illuminate/config": "^12.0",
    "illuminate/console": "^12.0",
    "illuminate/contracts": "^12.0",
    "illuminate/support": "^12.0",
    "spatie/php-structure-discoverer": "^2.3.3"
  },
  "require-dev": {
    "cline/coding-standard": "^1.5.7",
    "ergebnis/composer-normalize": "^2.48.2",
    "orchestra/testbench": "^10.8",
    "pestphp/pest": "^4.1.6",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "symfony/var-dumper": "^7.4.0"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cline\\Discovery\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Cline\\Discovery\\Providers\\BusServiceProvider",
        "Cline\\Discovery\\Providers\\ConsoleDiscoveryServiceProvider",
        "Cline\\Discovery\\Providers\\DomainEntityServiceProvider",
        "Cline\\Discovery\\Providers\\EventListenerServiceProvider",
        "Cline\\Discovery\\Providers\\EventSubscriberServiceProvider",
        "Cline\\Discovery\\Providers\\LivewireAutoDiscoveryServiceProvider",
        "Cline\\Discovery\\Providers\\PolicyServiceProvider"
      ]
    }
  },
  "scripts": {
    "lint": "ecs check --fix",
    "refactor": "rector",
    "test": [
      "@test:lint",
      "@test:type-coverage",
      "@test:unit",
      "@test:types",
      "@test:refactor"
    ],
    "test:lint": "ecs check",
    "test:refactor": "rector --dry-run",
    "test:type-coverage": "pest --parallel --min=90 --type-coverage",
    "test:types": "phpstan",
    "test:unit": "pest --parallel --min=90 --coverage"
  }
}
